<UserControl x:ClassModifier="internal" x:Class="Egs.Views.FixedRegionsSettingsUserControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:deviceControl="clr-namespace:Egs;assembly=EgsDeviceControlCore" xmlns:local="clr-namespace:Egs"
        xmlns:properties="clr-namespace:Egs.EgsDeviceControlCore.Properties"
        xmlns:dotnetutilviews="clr-namespace:Egs.DotNetUtility.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d" d:DesignWidth="800"
        Background="White">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/EgsHostAppCore;component/Views/CommonResources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <StackPanel>
        <GroupBox
                Header="{Binding Source={x:Static deviceControl:BindableResources.Current}, Path=Resources.CommonStrings_Settings}">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <CheckBox IsChecked="{Binding Device.Settings.IsToDrawBordersOnCameraViewImageByDevice.Value}"
                            Content="{Binding Source={x:Static deviceControl:BindableResources.Current}, Path=Resources.EgsDeviceSettings_IsToDrawBordersOnCameraViewImageByDevice_Description}" />
                    <CheckBox IsChecked="{Binding Device.Settings.IsToDetectFacesOnDevice.Value}"
                            Content="{Binding Source={x:Static deviceControl:BindableResources.Current}, Path=Resources.EgsDeviceSettings_IsToDetectFacesOnDevice_Description}" />
                    <CheckBox IsChecked="{Binding Device.Settings.IsToDetectHandsOnDevice.Value}"
                            Content="{Binding Source={x:Static deviceControl:BindableResources.Current}, Path=Resources.EgsDeviceSettings_IsToDetectHandsOnDevice_Description}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <CheckBox IsChecked="{Binding Device.Settings.IsToFixFaceDetectionRegion.Value}"
                            Content="{Binding Source={x:Static deviceControl:BindableResources.Current}, Path=Resources.EgsDeviceSettings_IsToFixFaceDetectionRegion_Description}" />
                    <CheckBox IsChecked="{Binding Device.Settings.IsToFixHandDetectionRegions.Value}"
                            Content="{Binding Source={x:Static deviceControl:BindableResources.Current}, Path=Resources.EgsDeviceSettings_IsToFixHandDetectionRegions_Description}" />
                    <CheckBox IsChecked="{Binding Device.Settings.IsToFixHandTrackingAreas.Value}"
                            Content="{Binding Source={x:Static deviceControl:BindableResources.Current}, Path=Resources.EgsDeviceSettings_IsToFixHandTrackingAreas_Description}" />
                    <CheckBox IsChecked="{Binding Device.Settings.IsToFixScreenMappedAreas.Value}"
                            Content="{Binding Source={x:Static deviceControl:BindableResources.Current}, Path=Resources.EgsDeviceSettings_IsToFixScreenMappedAreas_Description}" />
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <StackPanel>
            <GroupBox
                    Header="{Binding Source={x:Static deviceControl:BindableResources.Current}, Path=Resources.EgsDeviceSettings_FaceDetectionAreaOnFixed_Description}">
                <UniformGrid DataContext="{Binding Device.Settings.FaceDetectionAreaOnFixed}" Columns="2">
                    <StackPanel>
                        <DockPanel>
                            <Label DockPanel.Dock="Left" VerticalContentAlignment="Center" Width="50" Margin="5,0"
                                    Content="{Binding Source={x:Static deviceControl:BindableResources.Current}, Path=Resources.CommonStrings_Left}" />
                            <TextBox DockPanel.Dock="Right"
                                    Text="{Binding Value, ElementName=FaceDetectionAreaOnFixed_Left_Slider, StringFormat={}{0:G5}}"
                                    Width="50" IsReadOnly="True" TextAlignment="Center"
                                    VerticalContentAlignment="Center" />
                            <Slider x:Name="FaceDetectionAreaOnFixed_Left_Slider" Value="{Binding Left, Mode=TwoWay}"
                                    Minimum="0" Maximum="1" VerticalAlignment="Center" TickFrequency="0.01"
                                    IsSnapToTickEnabled="true" TickPlacement="Both" />
                        </DockPanel>
                        <DockPanel>
                            <Label DockPanel.Dock="Left" VerticalContentAlignment="Center" Width="50" Margin="5,0"
                                    Content="{Binding Source={x:Static deviceControl:BindableResources.Current}, Path=Resources.CommonStrings_Right}" />
                            <TextBox DockPanel.Dock="Right"
                                    Text="{Binding Value, ElementName=FaceDetectionAreaOnFixed_Right_Slider, StringFormat={}{0:G5}}"
                                    Width="50" IsReadOnly="True" TextAlignment="Center"
                                    VerticalContentAlignment="Center" />
                            <Slider x:Name="FaceDetectionAreaOnFixed_Right_Slider" Value="{Binding Right, Mode=TwoWay}"
                                    Minimum="0" Maximum="1" VerticalAlignment="Center" TickFrequency="0.01"
                                    IsSnapToTickEnabled="true" TickPlacement="Both" />
                        </DockPanel>
