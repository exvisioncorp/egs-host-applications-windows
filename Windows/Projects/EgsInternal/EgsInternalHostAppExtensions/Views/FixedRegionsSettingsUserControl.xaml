                            <Label DockPanel.Dock="Left" VerticalContentAlignment="Center" Width="50" Margin="5,0"
                                    Content="{Binding Source={x:Static deviceControl:BindableResources.Current}, Path=Resources.CommonStrings_Top}" />
                            <TextBox DockPanel.Dock="Right"
                                    Text="{Binding Value, ElementName=FaceDetectionAreaOnFixed_Top_Slider, StringFormat={}{0:G5}}"
                                    Width="50" IsReadOnly="True" TextAlignment="Center"
                                    VerticalContentAlignment="Center" />
                            <Slider x:Name="FaceDetectionAreaOnFixed_Top_Slider" Value="{Binding Top, Mode=TwoWay}"
                                    Minimum="0" Maximum="1" VerticalAlignment="Center" TickFrequency="0.01"
                                    IsSnapToTickEnabled="true" TickPlacement="Both" />
                        </DockPanel>
                        <DockPanel>
                            <Label DockPanel.Dock="Left" VerticalContentAlignment="Center" Width="50" Margin="5,0"
                                    Content="{Binding Source={x:Static deviceControl:BindableResources.Current}, Path=Resources.CommonStrings_Bottom}" />
                            <TextBox DockPanel.Dock="Right"
                                    Text="{Binding Value, ElementName=FaceDetectionAreaOnFixed_Bottom_Slider, StringFormat={}{0:G5}}"
                                    Width="50" IsReadOnly="True" TextAlignment="Center"
                                    VerticalContentAlignment="Center" />
                            <Slider x:Name="FaceDetectionAreaOnFixed_Bottom_Slider"
                                    Value="{Binding Bottom, Mode=TwoWay}" Minimum="0" Maximum="1"
                                    VerticalAlignment="Center" TickFrequency="0.01" IsSnapToTickEnabled="true"
                                    TickPlacement="Both" />
                        </DockPanel>
                    </StackPanel>
                </UniformGrid>
            </GroupBox>

