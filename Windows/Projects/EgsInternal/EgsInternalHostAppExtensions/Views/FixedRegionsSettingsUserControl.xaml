                        <Label DockPanel.Dock="Left" VerticalContentAlignment="Center" Width="50" Margin="5,0"
                                Content="{Binding Source={x:Static deviceControl:BindableResources.Current}, Path=Resources.CommonStrings_Top}" />
                        <TextBox DockPanel.Dock="Right"
                                Text="{Binding Value, ElementName=FaceDetectionScaleOnFixed_Top_Slider, StringFormat={}{0:G5}}"
                                Width="50" IsReadOnly="True" TextAlignment="Center" VerticalContentAlignment="Center" />
                        <Slider x:Name="FaceDetectionScaleOnFixed_Top_Slider" Value="{Binding From, Mode=TwoWay}"
                                Minimum="24" Maximum="200" VerticalAlignment="Center" TickFrequency="1" LargeChange="10"
                                IsSnapToTickEnabled="true" TickPlacement="Both" />
